<?xml version="1.0" encoding="UTF-8"?>
<root>
	<family >
		<id>2011100901</id><!-- 通常情况下id是属性，因为只有跟family绑定才有意义，family对象消失，此id也没有意义 -->
		<address>GZ</address><!-- address 可以随便便，family可以四处为家。。。。注释不可嵌套-->
		<zipcode>510520</zipcode>
	</family>
	
	<family id="2011100902">
		<!-- xml内置5种转义字符 -->
		<address>&lt;BJ&gt;</address>
		<zipcode>110120</zipcode>
		<!-- xml 特殊字符   &#x  ; -->
		<price>&#x2605;</price>
	</family>
	
	
	<!-- 一下代码不让xml解析器解析 -->
	<![CDATA[
		<family id="2011100902">
			<address>BJ</address>
			<zipcode>110120</zipcode>
		</family>
	]]>
</root>

